           android:layout_below="@+id/buttonjump"
           android:background="@null"
           android:src="@drawable/use" />

       <ImageButton
           android:id="@+id/buttonwep"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/buttonjump"
           android:layout_toLeftOf="@+id/buttoninv"
           android:background="@null"
           android:src="@drawable/broadsword1" />

       <ImageButton
           android:id="@+id/buttonr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/buttonuse1"
           android:layout_toLeftOf="@+id/buttonuse1"
           android:background="@null"
           android:src="@drawable/crossbow" />

       <ImageButton
           android:id="@+id/buttonmagic"
           android:layout_width="wrap_content"
