        android:background="@null"
        android:src="@drawable/save" />

    <ImageButton
        android:id="@+id/buttonload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButton02"
        android:layout_toLeftOf="@+id/ImageButton02"
        android:background="@null"
        android:src="@drawable/load" />

    <ImageButton
        android:id="@+id/buttonquick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttondiary"
        android:layout_toLeftOf="@+id/buttonconsole"
        android:background="@null"
        android:src="@drawable/spin"
